---
pageable: true
per_page: 10
---

<section class="compact bg-light-green">
  <%= partial "partials/navbar" %>
</section>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <section class="compact-blog pv-2">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h2>
            <%= link_to article.title, article, class: "light-intense-green" %>
          </h2>
          <span><%= article.date.strftime('%b %e') %></span>

          <div class="pt-3">
            <%= article.summary(100) %>
            <a href="<%= article.url %>" class="light-intense-green">Read more</a>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
